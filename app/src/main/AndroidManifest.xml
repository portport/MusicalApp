<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/category_playlists"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SongsActivity"
            android:label="@string/category_songs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/category_nowPlaying"
            android:parentActivityName=".SongsActivity" />
    </application>

</manifest>